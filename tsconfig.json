{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true, // for sequelize
    "emitDecoratorMetadata": true, // for sequelize
    "module": "commonjs",
    "rootDir": "../server", // Where your source code lives
    "outDir": "./build", // Where compiled JS should go
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest"] // This is fine if you're testing with Jest
  },
  "include": ["./**/*"], // Files to compile (usually your TS files)
  "exclude": ["node_modules", "build"] // Folders you DON'T want to compile
}
